<h1>Log In</h1>

<%= simple_form_for :session, url: sessions_path, :html => { :class => 'form-horizontal' } do |f| %>
    <fieldset>
      <legend></legend>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :remember_me, as: :boolean, inline_label: "Remember me" %>
    </fieldset>

    <div class="form-actions">
      <%= f.button :submit, value: "Log In", class: "btn btn-primary btn-large" %> <%= link_to "Cancel", root_path, class: "btn btn-large" %>
    </div>
<% end %>
